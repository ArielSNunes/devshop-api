// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   String @id @default(uuid()) @db.Uuid
  name String @db.VarChar(250)
  slug String @db.VarChar(250) @unique

  @@map("categories")
}
